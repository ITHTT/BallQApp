<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:id="@+id/tv_match_guess_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/gold"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/tvLeft"
            android:background="@drawable/icon_match_guess_left_item_selector"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="@color/c_3a3a3a"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tvCenter"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/icon_match_guess_center_item_selector"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="@color/c_3a3a3a"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/tvRight"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/icon_match_guess_right_item_selector"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="@color/c_3a3a3a"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>