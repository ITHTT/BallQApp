<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_match_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="20dp"
        android:text="1"
        android:textColor="#858585"
        android:textSize="12sp"
        android:typeface="monospace" />

    <RelativeLayout
        android:id="@+id/viewGroupContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_match_team_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="2"
            android:textColor="#3a3a3a"
            android:textSize="13sp"
            android:typeface="monospace" />
        <View
            android:id="@+id/_center1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/tv_match_percent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/_center1"
            android:gravity="center"
            android:text="3"
            android:textColor="#3a3a3a"
            android:textSize="13sp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/tv_match_state"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="#ca574b"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:typeface="monospace" />
    </RelativeLayout>
</LinearLayout>