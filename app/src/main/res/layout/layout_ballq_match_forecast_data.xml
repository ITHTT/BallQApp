<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_match_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:text="1"
        android:textColor="#858585"
        android:textSize="12sp"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/viewGroupContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv_match_home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:maxWidth="100dp"
                android:text=""
                android:textColor="#3a3a3a"
                android:textSize="13sp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/tv_match_score_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="#3a3a3a"
                android:textSize="13sp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/tv_match_away_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="100dp"
                android:text=""
                android:textColor="#3a3a3a"
                android:textSize="13sp"
                android:typeface="monospace" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_match_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textColor="#3a3a3a"
            android:textSize="13sp"
            android:typeface="monospace" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_match_state"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="#ca574b"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:typeface="monospace" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>