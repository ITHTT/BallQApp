<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingTop="10dp"
    android:background="@color/gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@mipmap/icon_user_trend_statistics_content_bg">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp"
                    android:paddingStart="15dp"
                    android:text="总场数："
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />
                <TextView
                    android:id="@+id/tvRoundNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/textView1"
                    android:layout_toRightOf="@id/textView1"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@id/tvRoundNum1"
                    android:layout_toRightOf="@id/tvRoundNum1"
                    android:paddingBottom="10dp"
                    android:text="场"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="15dp"
                    android:paddingStart="3dp"
                    android:text="场"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tvWinsNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/textView2"
                    android:layout_toStartOf="@id/textView2"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvWinsNum1"
                    android:layout_toStartOf="@id/tvWinsNum1"
                    android:paddingBottom="10dp"
                    android:text="总赢场数："
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tvLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="3dp"
                    android:paddingStart="15dp"
                    android:text="总输场数："
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tvLoseNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/tvLeft2"
                    android:layout_toRightOf="@id/tvLeft2"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@id/tvLoseNum1"
                    android:layout_toRightOf="@id/tvLoseNum1"
                    android:paddingBottom="10dp"
                    android:text="场"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tvRight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="15dp"
                    android:paddingStart="3dp"
                    android:text="场"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tvGoneNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvRight2"
                    android:layout_toStartOf="@id/tvRight2"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvGoneNum1"
                    android:layout_toStartOf="@id/tvGoneNum1"
                    android:paddingBottom="10dp"
                    android:text="总走场数："
                    android:textColor="#1b1b1b"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </RelativeLayout>
        </LinearLayout>
        <com.tysci.ballq.views.widgets.bubbleview.BubbleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            app:bb_arrowTo="@+id/textView1"
            app:bb_arrowDirection="Down"
            app:bb_fillColor="@color/gold"
            app:bb_arrowHeight="15dp"
            app:bb_arrowWidth="20dp"
            app:bb_borderColor="@color/gray"
            app:bb_borderWidth="1dp"
            app:bb_cornerBottomLeftRadius="0dp"
            app:bb_cornerBottomRightRadius="5dp"
            app:bb_cornerTopLeftRadius="0dp"
            app:bb_cornerTopRightRadius="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="总走势"
                android:textColor="#1b1b1b"
                android:textSize="15sp"
                android:typeface="monospace" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="right"
                android:text="点击查看详情"
                android:textColor="#1b1b1b"
                android:textSize="12sp"
                android:typeface="monospace" />
        </com.tysci.ballq.views.widgets.bubbleview.BubbleLinearLayout>
</FrameLayout>