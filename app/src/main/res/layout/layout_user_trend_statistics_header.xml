<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="80dp"
            android:paddingRight="10dp"
            android:background="@mipmap/icon_select_circle_type_bg"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/gold"
                android:text="天朝德玛"/>
            <TextView
                android:id="@+id/tv_user_profit_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:text="+15% 盈利"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="80dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/tv_all_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="6 场"/>
            <TextView
                android:id="@+id/tv_win_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="4 赢"/>
            <TextView
                android:id="@+id/tv_lose_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="1 输"/>
            <TextView
                android:id="@+id/tv_go_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="1 走"/>
        </LinearLayout>
    </LinearLayout>
    <include
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        layout="@layout/layout_user_header"/>
</FrameLayout>