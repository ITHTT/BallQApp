<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <include
            android:id="@+id/layout_user_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            layout="@layout/layout_user_header"/>
        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_user_header"
            android:textColor="#2c2c2c"
            android:text="呵呵哈呵呵"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="75dp"
            android:textSize="15dp"
            android:maxLength="16"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_author_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_LZ"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@mipmap/btn_background_blue"
                android:text="楼主"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="13.5sp"/>

            <ImageView
                android:id="@+id/iv_user_achievement01"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:id="@+id/iv_user_achievement02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_floor_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2楼"
            android:textColor="@color/c_3a3a3a"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_centerVertical="true"
            android:textSize="12.5sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:28"
            android:textColor="@color/c_3a3a3a"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="12.5sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@color/c_3a3a3a"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#dedfe4"/>
</LinearLayout>
