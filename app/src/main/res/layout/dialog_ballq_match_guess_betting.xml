<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game_betting_dialog">
    <TextView
        android:id="@+id/tv_game_betting_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:gravity="center"
        android:text="您已选择:"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a7a7a7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <com.tysci.ballq.views.widgets.LoadDataLayout
        android:id="@+id/layout_loading_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layout_betting_guess_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#d4d4d4"
                android:text="请输入投注金币数量:"/>
            <TextView
                android:id="@+id/tv_user_moneys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="#d4d4d4"
                android:text="(当前可用金币0.00)"/>
        </LinearLayout>
        <com.tysci.ballq.views.widgets.NoScrollGridView
            android:id="@+id/gv_game_betting_moneys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:numColumns="4"
            android:horizontalSpacing="12dp"
            android:verticalSpacing="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_game_betting_profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#d4d4d4"
                android:text="预期收益:0"/>
            <TextView
                android:id="@+id/tv_moneys_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f64958"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="您的金额不足"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <CheckBox
                android:id="@+id/cb_mark"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/icon_game_betting_mark_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="不参与竞技场"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:gravity="center">
            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="取消"
                android:textColor="#cdcdcd"
                android:background="@drawable/bt_ok_select_bg"/>
            <Button
                android:id="@+id/bt_ok"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:textColor="#eacb70"
                android:text="投注"
                android:background="@drawable/bt_ok_select_bg" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>